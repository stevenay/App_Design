<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="460dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10.0dp"
    android:background="@drawable/card_border_color"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_page_number_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:gravity="center_horizontal"
            android:text="1 of 10 pages"
            android:textSize="@dimen/text_small"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/iv_lesson_image"
            android:layout_width="@dimen/lesson_image_size"
            android:layout_height="@dimen/lesson_image_size"
            android:layout_below="@id/tv_page_number_top"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image" />

        <TextView
            android:id="@+id/tv_lesson_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_below="@id/iv_lesson_image"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:lineSpacingMultiplier="1.2"
            android:maxLines="12"
            android:paddingLeft="@dimen/margin_medium_2"
            android:paddingRight="@dimen/margin_medium_2"
            android:text="It's not enough to wear sunscreen. You need to wear the right kind of sunscreen and keep reapplying it regularly throughout the day in order to ensure that you are adequately protected in the sun. Broad-spectrum sunscreen protects against both types of radiation."
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_regular_2x" />

        <ImageButton
            android:id="@+id/btn_pin"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="@dimen/margin_medium_2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_pin_image" />

        <ImageButton
            android:id="@+id/btn_comment"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginBottom="13dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_chat_24dp" />

        <ImageButton
            android:id="@+id/btn_request_article"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="@dimen/margin_medium_2"
            android:layout_marginLeft="@dimen/margin_medium_2"
            android:layout_marginBottom="@dimen/margin_medium_2"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/btn_comment"
            android:background="@color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_record_voice_over_24dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>