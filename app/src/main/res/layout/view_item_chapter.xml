<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="1dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="0dp">

    <TextView
        android:id="@+id/tv_chapter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="4"
        android:text="1. Wear broad-spectrum sunscreen."
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular_2x"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tv_chapter_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="4"
        android:paddingLeft="@dimen/margin_medium_2"
        android:paddingRight="@dimen/margin_medium_2"
        android:text="It's not enough to wear sunscreen. You need to wear the right kind of sunscreen and keep reapplying..."
        android:textColor="@color/primary_text"
        android:textSize="@dimen/text_regular" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:padding="@dimen/margin_medium_2"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/tv_cardCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:drawableLeft="@drawable/ic_radio_button_checked_24dp"
            android:drawablePadding="@dimen/margin_small"
            android:gravity="right"
            android:text="8 steps"
            android:textColor="@color/text_like_counter"
            android:textSize="@dimen/text_regular" />

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/tv_cardCount"
            android:layout_marginRight="@dimen/margin_medium"
            android:drawableLeft="@drawable/ic_query_builder_24dp"
            android:drawablePadding="@dimen/margin_small"
            android:text="5 min"
            android:textColor="@color/text_like_counter"
            android:textSize="@dimen/text_regular" />
    </RelativeLayout>

</LinearLayout>

